FROM openjdk:11
ARG JAR_FILE=target/*.jar
ARG JO_PROFILE
ARG JO_DB_ADDRESS
ARG JO_DB_PASSWORD
ARG JO_JWT_SECRET
ARG JO_KAKAO_CLIENT_ID
ARG JO_KAKAO_LOGIN_REDIRECT_URI
COPY ${JAR_FILE} app.jar
ENTRYPOINT [
    "java",
    "${JO_PROFILE}",
    "${JO_DB_ADDRESS}",
    "${JO_DB_PASSWORD}",
    "${JO_JWT_SECRET}",
    "${JO_KAKAO_CLIENT_ID}",
    "${JO_KAKAO_LOGIN_REDIRECT_URI}",
    "-jar",
    "/app.jar"
]
